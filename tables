create table EMPLOYEE_INFORMATION(
    EMPLOYEE_ID              INT             NOT NULL,
    EMPLOYEE_NAME            VARCHAR(50)     NOT NULL,
    PRIMARY KEY (EMPLOYEE_ID)     
);

INSERT INTO EMPLOYEE_INFORMATION VALUES (1001,'Vipin');
INSERT INTO EMPLOYEE_INFORMATION VALUES (1002,'Jay');
INSERT INTO EMPLOYEE_INFORMATION VALUES (1003,'Ryan');

//enable disable foreign key checks
SET foreign_key_checks = 1;

create table TEAM_INFORMATION(
    TEAM_ID                  INT             NOT NULL,
    EMPLOYEE_ID              INT             NOT NULL,
    MANAGER_ID               INT             NOT NULL,
    PRIMARY KEY (TEAM_ID)
);

ALTER TABLE EMPLOYEE_INFORMATION ADD CONSTRAINT `TEAM_INFORMATION` FOREIGN KEY (TEAM_ID) REFERENCES TEAM_INFORMATION(TEAM_ID);
    
ALTER TABLE TEAM_INFORMATION ADD CONSTRAINT `EMPLOYEE_INFORMATION` FOREIGN KEY (EMPLOYEE_ID) REFERENCES EMPLOYEE_INFORMATION(EMPLOYEE_ID);
ALTER TABLE TEAM_INFORMATION ADD CONSTRAINT `EMPLOYEE_INFORMATION_2` FOREIGN KEY (MANAGER_ID) REFERENCES EMPLOYEE_INFORMATION(EMPLOYEE_ID);

CREATE TABLE PROGRAM_INFORMATION(
    PROGRAM_ID          INT             NOT NULL,
    PROGRAM             VARCHAR(99)     NOT NULL,
    P_RELEASE           VARCHAR(10)     NOT NULL,
    VERSION             VARCHAR(10)     NOT NULL,
    PRIMARY KEY (PROGRAM_ID)
);

CREATE TABLE BUG_INFORMATION(
    BUG_ID              INT             NOT NULL,
    PROGRAM_ID          INT             NOT NULL,
    REPORT_TYPE         VARCHAR(15)     NOT NULL,
    SEVERITY            VARCHAR(10)     NOT NULL,
    SUMMARY             VARCHAR(99)     NOT NULL,
    REPRODUCIBLE        VARCHAR(5)      ,
    REPRODUCTION_STEPS  VARCHAR(199)    ,
    SUGGESTED_FIX       VARCHAR(199)    ,
    REPORTED_BY         INT             NOT NULL,
    REPORTED_BY_DATE    DATE            ,
    FUNCTIONAL_AREA     VARCHAR(10)     NOT NULL,
    ASSIGNED_TO         VARCHAR(10)     NOT NULL,
    COMMENTS            VARCHAR(199)    ,
    STATUS              VARCHAR(10)     NOT NULL,
    PRIORITY            VARCHAR(10)     NOT NULL,
    RESOLUTION_VERSION  VARCHAR(10)     NOT NULL,
    RESOLUTION          VARCHAR(10)     NOT NULL,
    RESOLVED_BY         INT             NOT NULL,
    RESOLVED_DATE       DATE            NOT NULL,
    RESOLUTION_TESTER   INT             NOT NULL,
    TESTING_DATE        DATE            NOT NULL,
    DEFECT_DEFERRED     VARCHAR(3)      ,
    PRIMARY KEY (BUG_ID),
    FOREIGN KEY (PROGRAM_ID)
    REFERENCES PROGRAM_INFORMATION(PROGRAM_ID)
);

CREATE TABLE HARDCODED_VALUES(
    CONSTANT_ID            VARCHAR(5)      NOT NULL,
    CONSTANT_NAME          VARCHAR(30)     NOT NULL,
    FIELD                  VARCHAR(20)     NOT NULL,
    PRIMARY KEY (CONSTANT_ID)
);

